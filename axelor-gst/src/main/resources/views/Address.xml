<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

  <form name="address-form" title="Address" model="com.axelor.apps.base.db.Address"
    onSave="action-group-base-address-onsave,save,action-base-address-method-update-lat-long" onNew="default-address-record" width="large"
    id="address-form-with-state">
    <panel name="mainPanel" title="Address details" colSpan="12">
      <field name="addressL7Country" onChange="action-address-record-clear-fields" required="true" canEdit="false" form-view="country-form"
        grid-view="country-grid" colSpan="6" />
      <field name="state" onChange="action-address-record-clear-fields" canEdit="false" form-view="gst-state-form" grid-view="gst-state-grid"
        colSpan="6" if="__config__.app.isApp('gst')" />
      <field name="addressL2" x-bind="{{addressL2|uppercase}}" placeholder="e.g. Financial department, CEO" />
      <field name="addressL3" x-bind="{{addressL3|uppercase}}" placeholder="e.g. Building A, Entry 2, 2nd Floor, Door 2E" />
      <field name="streetNumber" x-bind="{{streetNumber|uppercase}}" onChange="action-address-record-change-addressL4"
        if="__config__.app.getApp('base').getStoreStreets()" />
      <field name="street" onSelect="action-address-attrs-update-domain-street" onChange="action-address-record-change-addressL4"
        form-view="street-form" grid-view="street-grid" canNew="true" if="__config__.app.getApp('base').getStoreStreets()" />
      <field name="addressL4" x-bind="{{addressL4|uppercase}}" if="!__config__.app.getApp('base').getStoreStreets()" />
      <field name="addressL5" x-bind="{{addressL5|uppercase}}" placeholder="e.g. POB 254" />
      <field name="zip" onChange="action-address-method-autocomplete-address" />
      <field name="city" onSelect="action-address-attrs-update-domain-city" canEdit="false" canNew="true" onChange="action-address-change-city"
        form-view="city-form" grid-view="city-grid" />

      <field name="addressL6" x-bind="{{addressL6|uppercase}}" required="true" colSpan="12" />
      <static name="addressL6Text" colSpan="12">Notice: The Zip/City
        field is automatically filled
        when the city is selected. You can
        change it when the
        Zip/City pair is missing or in case of
        minor
        change.
      </static>
      <button-group name="map1BtnGroup" colSpan="6" hideIf="$popup()">
        <button name="mapBtn" title="View map" icon="fa-map-marker" onClick="action-base-address-method-view-map" />
        <button name="directionsBtn" title="Get direction" icon="fa-location-arrow" onClick="action-base-address-method-view-direction" />
      </button-group>
      <spacer name="btnGrpSpacer" colSpan="6" />
      <button-group name="map2BtnGroup" colSpan="6" showIf="$popup()">
        <button name="mapBtn" title="View map" icon="fa-map-marker" onClick="action-base-address-method-view-map,close" />
        <button name="directionsBtn" title="Get direction" icon="fa-location-arrow" onClick="action-base-address-method-view-direction,close" />
      </button-group>
      <field name="isUsed" hidden="true" type="boolean" />
    </panel>
    <panel name="qasCertificationPanel" title="QAS certification" colSpan="12" if="__config__.app.getApp('base').getHasQasValidation()">
      <field name="certifiedOk" colSpan="4" />
      <panel name="actionsPanel" colSpan="4">
        <button name="validateBtn" title="Validate" onClick="com.axelor.apps.base.web.AddressController:validate,save" />
        <button name="selectBtn" title="Choose" onClick="com.axelor.apps.base.web.AddressController:select,save" />
      </panel>
      <panel-related name="pickListPanel" field="pickList" title="Pick list" colSpan="12" form="pick-list-entry-form"
        grid-view="pick-list-entry-grid" />
    </panel>
  </form>

  <form name="address-partner-address-form" title="Address" model="com.axelor.apps.base.db.Address"
    onSave="action-group-base-address-onsave,save,action-base-address-method-create-partner-address,action-base-address-method-update-lat-long"
    onNew="default-address-record" width="large" id="address-partner-address-form-with-state">
    <panel name="mainPanel" title="Address details" colSpan="12">
      <field name="addressL7Country" onChange="action-address-record-clear-fields" required="true" canEdit="false" form-view="country-form"
        grid-view="country-grid" colSpan="12" />
      <field name="state" onChange="action-address-record-clear-fields" canEdit="false" form-view="gst-state-form" grid-view="gst-state-grid"
        colSpan="6" if="__config__.app.isApp('gst')" />
      <field name="addressL2" x-bind="{{addressL2|uppercase}}" placeholder="e.g. Financial department, CEO" />
      <field name="addressL3" x-bind="{{addressL3|uppercase}}" placeholder="e.g. Building A, Entry 2, 2nd Floor, Door 2E" />
      <field name="streetNumber" x-bind="{{streetNumber|uppercase}}" onChange="action-address-record-change-addressL4"
        if="__config__.app.getApp('base').getStoreStreets()" />
      <field name="street" onSelect="action-address-attrs-update-domain-street" onChange="action-address-record-change-addressL4"
        form-view="street-form" grid-view="street-grid" canNew="true" if="__config__.app.getApp('base').getStoreStreets()" />
      <field name="addressL4" x-bind="{{addressL4|uppercase}}" if="!__config__.app.getApp('base').getStoreStreets()" />
      <field name="addressL5" x-bind="{{addressL5|uppercase}}" placeholder="e.g. POB 254" />
      <field name="zip" onChange="action-address-method-autocomplete-address" />
      <field name="city" onSelect="action-address-attrs-update-domain-city" canEdit="false" canNew="true" onChange="action-address-change-city"
        form-view="city-form" grid-view="city-grid" />
      <field name="addressL6" x-bind="{{addressL6|uppercase}}" required="true" colSpan="12" />
      <static name="addressL6Text" colSpan="12">Notice: The Zip/City field is automatically filled when the city is selected. You can change it when
        the Zip/City pair is missing or in case of minor change.
      </static>
      <field name="isInvoicingAddr" type="boolean" showIf="$popup() &amp;&amp; id == null" title="Invoicing address" />
      <field name="isDeliveryAddr" type="boolean" showIf="$popup() &amp;&amp; id == null" title="Delivery address" />
      <field name="isDefault" type="boolean" showIf="$popup() &amp;&amp; id == null" title="Default" />
      <button-group colSpan="6" hideIf="$popup()">
        <button name="mapBtn" title="View map" icon="fa-map-marker" onClick="action-base-address-method-view-map" />
        <button name="directionsBtn" title="Get direction" icon="fa-location-arrow" onClick="action-base-address-method-view-direction" />
      </button-group>
      <spacer name="btnGrpSpacer" colSpan="6" />
      <button-group colSpan="6" showIf="$popup()">
        <button name="mapBtn" title="View map" icon="fa-map-marker" onClick="action-base-address-method-view-map,close" />
        <button name="directionsBtn" title="Get direction" icon="fa-location-arrow" onClick="action-base-address-method-view-direction,close" />
      </button-group>
      <field name="isUsed" hidden="true" type="boolean" />
    </panel>
    <panel name="qasCertificationPanel" title="QAS certification" colSpan="12" if="__config__.app.getApp('base').getHasQasValidation()">
      <field name="certifiedOk" colSpan="4" />
      <panel name="actionsPanel" colSpan="4">
        <button name="validateBtn" title="Validate" onClick="com.axelor.apps.base.web.AddressController:validate,save" />
        <button name="selectBtn" title="Choose" onClick="com.axelor.apps.base.web.AddressController:select,save" />
      </panel>
      <panel-related name="pickListPanel" field="pickList" title="Pick list" colSpan="12" form="pick-list-entry-form"
        grid-view="pick-list-entry-grid" />
    </panel>
  </form>

  <action-record name="action-address-change-city" model="com.axelor.apps.base.db.Address" id="action-address-change-city with-state">
    <field name="addressL6" if="city &amp;&amp; city.zip" expr="eval:city.hasZipOnRight ? city.name+' '+city.zip :city.zip+' '+city.name" />
    <field name="addressL6" if="city &amp;&amp; !city.zip" expr="eval: city.name" />
    <field name="addressL6" if="!city" expr="eval: null" />
    <!-- <field name="addressL7Country" expr="eval:city.department==null?addressL7Country:city.department.region!=null?city.department.region.country:addressL7Country"/> -->
    <field name="state" expr="eval: city?.state" if="city" />
    <field name="addressL7Country" expr="eval: city?.country" if="city" />
    <field name="zip" expr="eval: city?.zip" />
    <field name="street" expr="eval: null" />
    <field name="state" expr="eval: city?.state" if="__config__.app.isApp('gst') &amp;&amp; city.state"/>
  </action-record>
</object-views>